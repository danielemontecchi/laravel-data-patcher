{
  "name": "danielemontecchi/laravel-patcher",
  "description": "Run one-off patch classes after deployment to fix data, update logic, clear cache, or run any post-deploy operation. Think of it as migrations, but for everything else.",
  "type": "library",
  "keywords": [
    "laravel",
    "patches",
    "patcher",
    "post-deploy",
    "hotfix",
    "data migration",
    "automation",
    "deployment",
    "operations"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Daniele Montecchi",
      "email": "daniele.montecchi@example.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.2",
    "illuminate/support": "^10.0 || ^11.0 || ^12.0"
  },
  "autoload": {
    "psr-4": {
      "DanieleMontecchi\\LaravelPatcher\\": "src/",
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "orchestra/testbench": "^8.0 || ^9.0 || ^10.0",
    "pestphp/pest": "^2.0",
    "pestphp/pest-plugin-laravel": "^2.0"
  },
  "extra": {
    "laravel": {
      "providers": [
        "DanieleMontecchi\\LaravelPatcher\\LaravelPatcherServiceProvider"
      ]
    }
  },
  "scripts": {
    "test": "pest"
  },
  "minimum-stability": "stable",
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
