{
  "name": "danielemontecchi/laravel-patcher",
  "description": "A predictable system for applying one-time operational or data patches in Laravelâ€”trackable, skippable, and rollback-ready.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Daniele Montecchi",
      "email": "daniele@montecchi.me"
    }
  ],
  "homepage": "https://danieelmontecchi.com",
  "support": {
    "issues": "https://github.com/danielemontecchi/laravel-patcher/issues"
  },
  "keywords": [
    "laravel",
    "patch",
    "patching",
    "migrations",
    "one-time",
    "rollback",
    "artisan",
    "data-operations"
  ],
  "require": {
    "php": "^8.1 || ^8.2 || ^8.3 || ^8.4",
    "illuminate/support": "^10.0|^11.0|^12.0"
  },
  "autoload": {
    "psr-4": {
      "DanieleMontecchi\\LaravelPatcher\\": "src/",
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "orchestra/testbench": "^8.0 || ^9.0 || ^10.0",
    "pestphp/pest": "^2.0",
    "pestphp/pest-plugin-laravel": "^2.0"
  },
  "extra": {
    "laravel": {
      "providers": [
        "DanieleMontecchi\\LaravelPatcher\\LaravelPatcherServiceProvider"
      ]
    }
  },
  "scripts": {
    "test": "pest"
  },
  "minimum-stability": "stable",
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
